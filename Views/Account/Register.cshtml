@model Authentication_App.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}



<style>

    .register {
        background-color: white;
    }

    form {
        width: 50%;
        margin: 20px auto;
        border: 2px solid black;
        padding: 20px;
    }

    input {
        width: 90%;
        padding: 10px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        height: 40px;
    }

    label {
        font-size: 20px;
        font-weight: bold;
        display: block;
    }

    .col {
        width: 40%;
        margin: 5px;
        padding: 10px;
        display: inline-block;
    }

    textarea {
        display: block;
        width: 90%;
        padding: 10px;
        box-sizing: border-box;
        border: 2px solid #ccc;
    }

    .custom-submit {
        margin: 10px;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-success {
        margin: 10px;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100px;
        height: 40px;
        background-color: #ABF62D;
        border: none;
        color: white;
        font-size: 20px;
        cursor: pointer;
        border-radius: 5px;
    }

    .btn-cancel {
        margin: 10px;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100px;
        height: 40px;
        background-color: #c15f5f;
        border: none;
        color: white;
        font-size: 20px;
        cursor: pointer;
        border-radius: 5px;
    }

    .btn-success:hover {
        background-color: #7fbd2b;
    }

    .btn-cancel:hover {
        background-color: #a13b3b;
    }

    .field-validation-error, .validation-summary-errors {
        display: block;
        color: red;
    }

    .alert-danger {
        display: block;
        text-align: center;
        color: red;
    }

    .heading {
        text-align: center;
        border: 1px solid;
        padding: 10px;
        font-size: 20px;
        background-color: #ABF62D;
    }
</style>

<body>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="heading">
            Registration Page
        </div>

        <div class="row">
            <div class="col">
                <label for="ProfilePhoto">Upload Profile Photo</label>
                <input type="file" class="form-control" id="ProfilePhoto" name="ProfilePhoto" accept=".jpg, .png" />
              @Html.ValidationMessageFor(temp => temp.ProfilePhoto)

            </div>

            <div class="col">
                <label for="Username">Username</label>
                <input type="text" id="UserName" name="UserName" placeholder="Username" class="form-control" value="@Model.UserName"/>
                @Html.ValidationMessageFor(temp => temp.UserName)
            </div>

            <div class="col">
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" placeholder="Email" class="form-control" value="@Model.Email" />
                @Html.ValidationMessageFor(temp => temp.Email)
            </div>



            <div class="col">
                <label for="Mobile">Mobile</label>
                <input type="number" id="PhoneNumber" name="PhoneNumber" placeholder="Phone Number" class="form-control" value="@Model.PhoneNumber" />
                @Html.ValidationMessageFor(temp => temp.PhoneNumber)
            </div>


            <div class="col">
                <label for="DateOfBirth">Date of Birth</label>
                <input type="date" id="DateOfBirth" name="DateOfBirth" placeholder="Date of Birth" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")"/>
                @Html.ValidationMessageFor(temp => temp.DateOfBirth)
            </div>

            <div class="col">
                <label for="Country">Country</label>
                <input type="text" id="Country" name="Country" placeholder="Country" class="form-control" value="@Model.Country" />
                @Html.ValidationMessageFor(temp => temp.Country)
            </div>

            <div class="col">
                <label for="Password">Password</label>
                <input type="password" id="PasswordHash" name="PasswordHash" placeholder="Password" class="form-control" />
                @Html.ValidationMessageFor(temp => temp.PasswordHash)
            </div>

            <div class="col">
                <label for="ConfirmPassword">Confirm Password</label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
            </div>

        </div>
        <div class="col">
            <label for="Address">Address</label>
            @Html.TextAreaFor(temp => temp.Address, new { placeholder = "Address", @class = "form-control",value=@Model.Address })
            @Html.ValidationMessageFor(temp => temp.Address)
        </div>

        <div class="custom-submit">
            <button type="submit" class="btn btn-success">Register</button>
            <button type="button" class="btn btn-cancel" onclick='redirectToAnotherAction("Index","Home")'>Cancel</button>

        </div>
        <p class="alert-danger"> @ViewBag.Message </p>
        @*
            @Html.ValidationSummary()*@


    }
    <script>
        function redirectToAnotherAction(actionName, controllerName) {
            window.location.href = "/" + controllerName + "/" + actionName;
        }
    </script>
</body>
