@model Authentication_App.Identity.ApplicationUser

@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Areas/Admin/Views/Shared/Admin_LayoutPage1.cshtml";
}

<style>

    h2 {
        text-align: center;
        margin: 10px auto;
    }

    .user-details-photo {
        height: 150px;
        width: 150px;
        margin: 0px auto;
        padding: 5px;
        border-radius: 50%;
        border: 1px solid black;
    }

        .user-details-photo img {
            height: 150px;
            width: 150px;
            border-radius: 50%;
        }

    .table {
        margin: 20px auto;
        width: 80%;
        border: 2px solid black;
        padding: 20px;
        border-collapse: collapse;
    }

    tr {
        height: 50px;
    }

    td, th {
        font-size: 20px;
        border: 1px solid black;
        text-align: center;
        padding: 5px;
        margin: 5px;
    }

    th {
        width: 40%;
    }

    .title-bar {
        background-color: #ABF62D;
        color: white;
        font-weight: bold;
    }

    .btn-user-details-back, .btn-user-details-delete {
        margin: 10px;
        padding: 10px 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30px;
        border: none;
        color: white;
        font-size: 20px;
        cursor: pointer;
        text-decoration: none;
        border-radius: 5px;
    }

    .btn-user-details-delete {
        background-color: red;
    }

    .btn-user-details-back {
        background-color: grey;
    }

    .back-delete {
        display: flex;
        width: fit-content;
        margin: auto;
    }

    .btn-user-details-delete:hover {
        background-color: #c90707;
    }

    .btn-user-details-back:hover {
        background-color: #515050;
    }
</style>

<h2>User Details</h2>
<div class="user-details-photo">

    <img src="data:image/png;base64,@Model.ProfilePhoto" alt="Encoded Image">
</div>
<table class="table">
    <tr>
        <th class="title-bar">Field</th>
        <th class="title-bar">Value</th>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.UserName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Mobile</th>
        <td>@Model.PhoneNumber</td>
    </tr>
    <tr>
        <th>DateOfBirth</th>
        <td>@Model.DateOfBirth.Value.ToString("d/M/yyyy")</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>Country</th>
        <td>@Model.Country</td>
    </tr>
    <tr>
        <th>User Deactivated ?</th>
        @if (@Model.isDisabled)
        {
            <td>Yes </td>
        }
        else
        {
            <td> No </td>
        }
    </tr>



</table>

<div class="back-delete">
    @*<a class="btn btn-danger" href="@Url.Action("Delete", "Users", new { id = Model.Email })">Delete</a>*@
    <a class="btn btn-user-details-delete" href="#" onclick="confirmDelete('@Model.Email')">Delete</a>
    <a class="btn btn-user-details-back" href="@Url.Action("Users", "Users")">Back</a>
</div>

    <script>
    function confirmDelete(email) {
        // Show a confirmation dialog
        if (window.confirm('Are you sure you want to delete the user with email ' + email + '?')) {
            // If the user clicks "OK," navigate to the delete action
            window.location.href = '@Url.Action("Delete", "Users", new { email = "__id__" })'.replace('__id__', email);
        }
        }
    </script>



